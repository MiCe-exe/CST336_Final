<%- include("../partials/header.ejs") %>

<div class="container p-4 my-4 bg-light rounded-5">
  <h2>User Information</h2><br>
  <div>
    <% if (user) { %>
      <p>Username: <%= user.username %></p>
      <p>Email: <%= user.email %></p>
      <p>Password: <script>document.write(maskPassword('<%= user.pwd %>'));</script></p>
      <p>Position: <%= user.position %></p>
      <p>Profession: <%= user.profession %></p>
      <p>Summary: <%= user.summary %></p>
      <a href="/user/update/<%= user.username %>" class="btn btn-primary">Edit Info</a>
      <!-- Logout button -->
      <a href="/user/logout" class="btn btn-primary">Logout</a>

    <% } else { %>
      <p>User information not available.</p>
    <% } %>
  </div><br>
      <% if (successMessage) { %>
        <div class="alert alert-success" role="alert">
          <%= successMessage %>
        </div>
      <% } %>
</div>

<%- include("../partials/footer.ejs") %>
